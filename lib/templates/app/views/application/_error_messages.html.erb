<%# locals: (resource: ) %>

<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert" data-turbo-cache="false">
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
